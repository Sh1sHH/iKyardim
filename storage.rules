rules_version = '2';

// Craft rules based on data in your Firestore database
// allow write: if firestore.get(
//    /databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin;
service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function hasAdminRole() {
      // Check for potential null token if not authenticated, though isAuthenticated should handle it
      return isAuthenticated() && (request.auth.token.admin == true || request.auth.token.superAdmin == true);
    }

    function hasPremiumRole() {
      // Check for potential null token
      return isAuthenticated() && request.auth.token.premium == true;
    }

    // Kullanıcı CV dosyaları için kurallar (/userCVs/{userId}/{fileName})
    match /userCVs/{userId}/{fileName} {
      // Kullanıcının kendi klasöründeki dosyaları okumasına (get),
      // yazmasına (create), ve silmesine (delete) izin ver.
      // list izni verilmedi (kullanıcı tüm CV'leri listeleyemez).
      allow get, create, delete: if isAuthenticated() && request.auth.uid == userId;
    }

    // Blog görselleri için kurallar
    match /blog-images/{fileName} {
      // Okuma kuralları - herkes okuyabilir
      allow read: if true;

      // Yazma kuralları - sadece admin yazabilir
      allow write: if isAuthenticated() && hasAdminRole();

      // Silme kuralları - sadece admin silebilir
      allow delete: if isAuthenticated() && hasAdminRole();
    }

    // IK Help dosyaları için kurallar
    match /ik-help/{fileName} {
      // Okuma kuralları
      allow read: if isAuthenticated() && (
        hasAdminRole() || hasPremiumRole()
      );

      // Yazma kuralları
      allow write: if isAuthenticated() && (
        hasAdminRole() || hasPremiumRole()
      );

      // Silme kuralları
      allow delete: if isAuthenticated() && (
        hasAdminRole()
      );
    }

    // Diğer tüm dosyalar için varsayılan reddetme
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
