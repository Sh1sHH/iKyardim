rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function hasAdminRole() {
      return isAuthenticated() && 
        (request.auth.token.admin == true || request.auth.token.superAdmin == true);
    }

    function hasPremiumRole() {
      return isAuthenticated() && request.auth.token.premium == true;
    }

    // Users collection rules
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || hasAdminRole();
      allow delete: if hasAdminRole();
      
      // Nested collections under users
      match /{document=**} {
        allow read: if isOwner(userId);
        allow write: if isOwner(userId);
      }
    }

    // IK Questions collection rules
    match /ikQuestions/{questionId} {
      allow read: if hasAdminRole() || 
        (hasPremiumRole() && request.auth.uid == resource.data.userId);
      allow create: if hasPremiumRole();
      allow update, delete: if hasAdminRole();
    }

    // IK Answers collection rules
    match /ikAnswers/{answerId} {
      allow read: if hasAdminRole() || 
        (hasPremiumRole() && request.auth.uid == get(/databases/$(database)/documents/ikQuestions/$(resource.data.questionId)).data.userId);
      allow create, update, delete: if hasAdminRole();
    }

    // Public collections (if needed)
    match /public/{document=**} {
      allow read: if true;
      allow write: if hasAdminRole();
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 